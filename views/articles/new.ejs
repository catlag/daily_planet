	<h1 class="text-center">
			Create Your New Article
	</h1>
	
	<div class="container">
		<form action="/articles" method="POST">
			<h4>
					<label for="title">Article Title:</label>
			</h4>
			<p>
				
				<input type="text" name="article[title]" id="title">
			</p>
			<br>
			<h4>
				<label for="text">Article:</label>
			</h4>
				
			<p>
				<textarea rows="6" cols="70" name="article[body]" id="body">
		 
				</textarea>
			</p>
			<p>
			<button type="submit" value="Post Article" class="btn btn-default">Post</button>
			</p>
		</form>
	</div>
