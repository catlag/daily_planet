	<link href='/stylesheet/style.css' rel='stylesheet'  type='text/css'>
</head>
<body>

	<nav class="navbar navbar-fixed-top navbar-inverse" role="navigation">
		<div class="container">
			<a class="navbar-brand" href="/">Daily Planet</a>
			<ul class="nav navbar-nav navbar-right">
				<li class="active"><a href="/articles/new">Post New Article</a></li>
				<li class="active"><a href="/about">About Us</a></li>
				<li class="active"><a href="/contact">Contact</a></li>

			</ul>
		        
		 </div>
	</nav>
	<div class="container">
		<h1>All Articles</h1>
		<% allMyArticles.forEach(function(article){ %>
			<h3>
				<a href="/articles/article/<%=article.id%>"><%=article.title%></a>
			</h3>
			
		<div class="body" >	
		<%=article.body%>
		</div>
		<a href="/articles/article/<%=article.id%>" class="readMore">Read More</a>
		<hr></hr>
		<%  }) %>
	</div>	
</body>
</html>